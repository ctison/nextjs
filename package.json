{
  "private": true,
  "scripts": {
    "dev": "concurrently 'yarn:codegen -w' 'yarn:next'",
    "build": "yarn run codegen && next build",
    "codegen": "graphql-codegen -c codegen.yaml",
    "export": "yarn run codegen && next export",
    "analyze": "ANALYZE=true yarn run build",
    "start": "next start",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lhci:collect": "lhci collect",
    "build:precommit": "yarn run build ; :"
  },
  "dependencies": {
    "@apollo/client": "3.5.6",
    "@material-ui/core": "4.12.3",
    "@material-ui/icons": "4.11.2",
    "apollo-server-micro": "3.5.0",
    "graphql": "16.2.0",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "1.1.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.2",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@lhci/cli": "0.8.2",
    "@next/bundle-analyzer": "12.0.7",
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "concurrently": "6.5.1",
    "eslint": "8.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.4",
    "prettier": "2.5.1",
    "typescript": "4.5.4"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "*": [
      "yarn run build:precommit"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:jsx-a11y/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "import/no-unresolved": "off"
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "jsx-a11y/anchor-is-valid": "off",
          "react/prop-types": "off",
          "@typescript-eslint/no-empty-interface": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "out/",
    ".lighthouseci/",
    "next.config.js",
    "apollo.config.js",
    "gql/client.ts",
    "gql/resolvers.types.ts"
  ],
  "renovate": {
    "extends": [
      "github>ctison/renovate"
    ]
  }
}
